{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "jsx": "react-jsx",
      "jsxImportSource": "preact",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "allowJs": true,
      "noEmit": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"]
  }
  